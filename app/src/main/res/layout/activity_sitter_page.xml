<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/act_sitter_xml_parentLayout"
    android:orientation="vertical"
    tools:context=".Controller">


    <LinearLayout
        android:id="@+id/act_sitter_xml_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="@string/findNewJobBtn"
            />

        <TextView
            android:id="@+id/allAcceptedJobsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="2"
            android:gravity="center"

            android:text="@string/allAcceptedJobsTitle"
            android:textColor="@color/petFormTitle_color"
            android:textSize="30dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="@string/jobPrefBtn"
            android:onClick="addJobPref"
            />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acceptedJobsList"
        android:dividerHeight="5dp"
        />

</LinearLayout>