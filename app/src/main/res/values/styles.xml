<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="LoginStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/border_button</item>

    </style>

    <style name="LoginButtonStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/light_green</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="LoginHeader">
        <item name="android:textSize">40sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/burgundy</item>
    </style>

    <style name="LoginLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/tan</item>
    </style>

    <style name="AllPetsButtons">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@color/tan</item>
    </style>


    <style name="AccountCreationHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/burgundy</item>
    </style>

    <style name="Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/burgundy</item>
    </style>

    <style name="AccountCreationInput">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/petFormInput_color</item>
    </style>

    <style name="AccountCreationLabel">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@color/teal</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="AccountCreationSubmit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/tan</item>
    </style>


    <style name="PetViewHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/burgundy</item>
    </style>

    <style name="PetView_TextView">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@color/teal</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="PetView_GoBack_Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/tan</item>
    </style>


    <style name="TextViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/teal</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <!-- activity_petforms styles -->
    <style name="PetForm_TextViews">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/teal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginStart">10dp</item>

    </style>

    <!-- activity_petforms styles -->
    <style name="SitterPref_TextViews">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/teal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginStart">10dp</item>

    </style>
</resources>